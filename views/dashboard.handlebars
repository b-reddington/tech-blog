<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="card col-4">
    <div class="card-body bg-dark-subtle">
        <div class="card-header">
            <h3>Create a New Post:</h3>
        </div>
        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-name">Post Title</label>
                <input class="form-control form-input bg-dark-subtle border border-primary" type="text" id="post-name" name="post-name" />
            </div>
            <div class="form-group">
                <label for="post-desc">Post Content</label>
                <textarea class="form-control form-input bg-dark-subtle border border-primary" id="post-desc" name="post-desc"></textarea>
            </div>
            </form>
            <div class="card-footer">
            <div class="form-group">
                <button type="submit" class="btn btn-primary col-12">Publish Post</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3>Current Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/posts/{{post.id}}">{{post.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/dashboard.js"></script>