<div class="row">
    <div class="text-center">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="card col-12">
    <div class="card-body rounded-3">
        <div class="card-header rounded-3">
            <h3>Create a New Post:</h3>
        </div>
        <form class="form new-post-form">
                <label for="post-name">Post Title</label>
                <input class="form-control form-input border border-primary" type="text" id="post-name" name="post-name" placeholder="Type your title here..."/>
                <label for="post-desc">Post Content</label>
                <textarea class="form-control form-input border border-primary" id="post-desc" name="post-desc" placeholder="Type your post here..."></textarea>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary col-12">Publish Post</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-10 container post-list">
        <h3>Previous posts by you:</h3>

        {{#each (sort_by_date posts) as |post|}}
        <div class="row card mb-2">
            <div class="card-body">
                <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
                <p>{{description}}</p>
            </div>
            <div class="card-footer">
                <p>Created on {{format_date date_created}}</p>
                <button class="btn btn-sm btn-danger col-12" data-id="{{post.id}}">Delete Post</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
</div>

<script src="./js/dashboard.js"></script>