    {{#if posts.length}}
    <div class="col-6 container post-list">
        <h3>Posts:</h3>

        {{#each posts as |post|}}
        <div class="row card mb-2">
            <div class="card-header">
                <h4><a href="/posts/{{post.id}}">{{post.name}}</a></h4>
                </div>
            <div class="card-body">
                <p>{{description}}</p>
            </div>
            <div class="card-footer">
                <p>Created by {{user.name}} on {{format_date date_created}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/dashboard.js"></script>