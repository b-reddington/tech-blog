<div class="container">
    <div class="card col-3 position-absolute top-50 start-50 translate-middle">
        <div class="card-header">
            <h2>Login</h2>
        </div>
        <div class="card-body">
            <form method="post" class="login-form mb3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control border border-primary" id="email"
                    placeholder="name@example.com">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control border border-primary" id="password"
                    placeholder="Password">
                    <div class="card-footer">
                <p class="text-center">Don't have an account yet? <a href="/signup">Sign Up here!</a></p>
                <button type="submit" class="btn btn-primary col-12">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="./js/login.js"></script>